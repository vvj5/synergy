<p id="notice"><%= notice %></p>

<h1>Listing Employee Courses</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_courses.each do |employee_course| %>
      <tr>
        <td><%= employee_course.employee %></td>
        <td><%= employee_course.course %></td>
        <td><%= link_to 'Show', employee_course %></td>
        <td><%= link_to 'Edit', edit_employee_course_path(employee_course) %></td>
        <td><%= link_to 'Destroy', employee_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

